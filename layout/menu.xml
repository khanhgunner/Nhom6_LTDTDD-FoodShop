                <TextView
                    android:id="@+id/conhang5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:text="Còn hàng"
                    android:textColor="#35B82A"
