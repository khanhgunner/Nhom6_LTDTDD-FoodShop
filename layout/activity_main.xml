<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:padding="6dp"
            android:contentDescription="back"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/chevron_left_solid"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa hồ sơ"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/download2"
            android:layout_marginLeft="130dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/edit"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="180dp"/>
        <EditText
            android:id="@+id/namebox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Hồ Thành Nhân"
            android:textColor="@color/black"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="13dp"
            android:background="@drawable/edit_text_bogpc"/>
        <TextView
            android:id="@+id/gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gmail"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="255dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nhandeptrai@gmail.com"
            android:textColor="@color/black"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="13dp"
            android:background="@drawable/edit_text_bogpc"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="330dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0769644085"
            android:textColor="@color/black"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="13dp"
            android:background="@drawable/edit_text_bogpc"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_marginTop="420dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_bogpc"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="16dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="500dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Save change"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:backgroundTint="#f54749"/>
</RelativeLayout>