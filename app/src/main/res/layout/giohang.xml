<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".giohang"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="6dp"
            android:contentDescription="back"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/chevron_left_solid"/>
        <TextView
            android:id="@+id/giohang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giỏ hàng"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_dot_solid"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/vitri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ giao hàng"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">
        <TextView
            android:id="@+id/thongtin"
            android:layout_marginLeft="45dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lê Văn Nguyễn Khánh | 0333829570"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/diachi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/thongtin"
            android:text="K293/25 Nguyễn Tất Thành, Thanh Bình, Hải Châu, Đà Nẵng"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="15dp"
            android:textColor="@drawable/text_color_hover"
            android:textSize="15sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/suitcase_solid"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/giaohang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thời gian giao hàng"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="15:00 - 27/10/2023"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        android:background="@drawable/cat_background"
        android:elevation="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:outlineAmbientShadowColor="@color/black">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contextClickable="true"
                android:cropToPadding="true"
                android:src="@drawable/test4"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trà sữa trân châu"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/conhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:text="Còn hàng"
                    android:textColor="#35B82A"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:layout_toRightOf="@+id/conhang"
                    android:src="@drawable/check" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75.000đ"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:orientation="horizontal"
        android:background="@drawable/cat_background"
        android:elevation="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:outlineSpotShadowColor="@color/black">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bun"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bún bò Huế"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/havehang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:text="Còn hàng"
                    android:textColor="#35B82A"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:layout_toRightOf="@+id/havehang"
                    android:src="@drawable/check" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.000đ"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_2"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="555dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng cộng:"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="190dp"
            android:text="100.000đ" />
    </LinearLayout>
    <Button
        android:id="@+id/thanhtoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="590dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Thanh toán"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:backgroundTint="#f54749"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="700dp"
        android:background="#eef3fc">
        <ImageButton
            android:id="@+id/home"
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/house_solid"
            android:background="@drawable/selector"/>
        <ImageButton
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/magnifying_glass_solid"
            android:background="@drawable/selector"
            android:layout_marginLeft="30dp" />
        <ImageButton
            android:id="@+id/order"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/bag_shopping_solid__1_"
            android:background="@drawable/selector"
            android:layout_marginLeft="30dp"/>
        <ImageButton
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/user_solid"
            android:background="@drawable/selector"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
</RelativeLayout>